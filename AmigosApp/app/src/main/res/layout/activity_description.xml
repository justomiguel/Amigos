<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonOk">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/imageViewPlaces"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#66000000"
                android:padding="15dp"
                android:layout_alignBottom="@+id/imageViewPlaces"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="44dp"
                android:layout_marginTop="5dp"

                >

            <TextView
                android:id="@+id/places"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:text="Lugares: "
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/place_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/places"
                android:layout_marginLeft="16dp"
                android:text="Bellas Artes"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/place_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/place_1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Zocalo"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/place_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/place_2"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Museo de AntropologÃ­a"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewResta"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/imageViewPlaces"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#66000000"
                android:padding="10dp"
                android:layout_marginTop="38dp"
                android:layout_alignTop="@+id/imageViewResta"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">


            <TextView
                android:id="@+id/Restantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageViewPlaces"
                android:layout_margin="16dp"
                android:text="Restaurantes: "
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/resta_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Restantes"
                android:layout_marginLeft="16dp"
                android:text="Barro negro"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/resta_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/resta_1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Pizza del Perro Negro"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/resta_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/resta_2"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Limosneros"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/com_facebook_button_blue"
        android:padding="8dp"
        android:text="Aceptar"
        android:textColor="@color/com_facebook_loginview_text_color" />


</RelativeLayout>
